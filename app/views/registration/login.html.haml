%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %link{:href => "https://use.fontawesome.com/releases/v5.6.1/css/all.css", :rel => "stylesheet"}/
  %body
    .wrapper
      .r-top-contents
        %header.r-top-alpha-header
          %h1.r-top-header-content
            %a{:class => "r-top-mercari", :href => "/jp/"}
            =image_tag "fmarket_logo_red.svg", size: "160x80", alt: "log"

      .login-contents
        .login-content
          .login-no-account
            %p.login-no-account__text
              アカウントをお持ちでない方はこちら
            = link_to " 新規会員登録" ,"#", class:"login-no-account__link"
          .login-have-account
            .login-have-account-facebook
              .login-have-account-facebook__icon
                =icon("fab", "facebook-square")
              .login-have-account-facebook__text
                Facebookでログイン
            .login-have-account-google
              .login-have-account-google__icon
                =icon("fab", "google")
              .login-have-account-google__text
                googleでログイン
          .login-form
            .login-form-inner
              .login-mail
                %input.login-mail__input.input-btn{:name => "email", :placeholder => "メールアドレス", :type => "email", :value => ""}/
              .login-password
                %input.login-password__input.input-btn{:name => "pass", :placeholder => "パスワード", :type => "password", :value => ""}/
              .login-image-content
                = image_tag "sample.png", class:"img-sample"
              .login-btn-content
                =link_to "ログイン","#", class: "login-btn-content__btn"
                
              =link_to "パスワードをお忘れの方", "#", class: "login-password-forget"
      = render partial: "f-regist"
              

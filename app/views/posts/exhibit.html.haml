= render 'layouts/header_login'
.exhibit-container
  = render 'layouts/mypageSidebar'
  %div
    %section.mypage-tab-container-exhibit
      %h2.mypage-tab-head-exhibit 出品した商品
      %ul.listing-tabs-exhibit
        %li.active
          %h3
            =link_to "#", "data-toggle": "tab" do
              出品中
        %li
          %h3
            =link_to "#" do
              取引中
        %li
          %h3
            =link_to "#" do
              売却済み
      .tab-content-exibit
        %ul#mypage-tab-transaction-now.mypage-item-list
          %li.mypage-item-not-found.show 出品中の商品がありません
          %li.mypage-item-not-found 取引中の商品がありません
          %li.mypage-item-not-found 売却中の商品がありません
    %ul.mypage-history-exhibit
      %li.pager-prev-exhibit.pager-cell-exhibit
        =link_to "#" do
          %i.fas.fa-chevron-left
      %li.pager-next-exhibit.pager-cell-exhibit
        =link_to "#" do
          %i.fas.fa-chevron-right
= render 'layouts/footer'

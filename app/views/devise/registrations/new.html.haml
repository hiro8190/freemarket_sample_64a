%h2 Sign up
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  %p ステップ1
  .field
    = f.label :nickname, 'ニックネーム'
    %br/
    = f.text_field :nickname, placeholder: '例) メルカリ太郎'
  .field
    = f.label :email, 'メールアドレス'
    %br/
    = f.email_field :email, placeholder: 'PC・携帯どちらでも可'
  .field
    = f.label :password, 'パスワード'
    - if @minimum_password_length
      %em
        (#{@minimum_password_length} characters minimum)
    %br/
    = f.password_field :password, autocomplete: "new-password"
  .field
    = f.label :name, 'お名前(全角)'
    %br/
    = f.text_field :last_name, placeholder: '例) 山田'
    = f.text_field :first_name, placeholder: '例) 彩'
  .field
    = f.label :name_kana, 'お名前カナ(全角)'
    %br/
    = f.text_field :last_name_kana, placeholder: '例) ヤマダ'
    = f.text_field :first_name_kana, placeholder: '例) アヤ'
  .field
    = f.label :birth, '生年月日'
    %br/
    = f.text_field :birth_year, placeholder: '--'
    = f.text_field :birth_month, placeholder: '--'
    = f.text_field :birth_day, placeholder: '--'
  %p ロボット認証
  %p ステップ2
  %p 電話番号認証
  %p ステップ3
  .field
    = f.label :postcode, '郵便番号'
    %br/
    = f.text_field :postcode, placeholder: '例) 123-4567'
  .field
    = f.label :prefeture, '都道府県'
    %br/
    = f.text_field :prefeture
  .field
    = f.label :city, '市区町村'
    %br/
    = f.text_field :city, placeholder: '例) 横浜市緑区'
  .field
    = f.label :block, '番地'
    %br/
    = f.text_field :block, placeholder: '例) 青山1-1-1'
  .field
    = f.label :building, '建物名'
    %br/
    = f.text_field :building, placeholder: '柳ビル103'
  .field
    = f.label :phone_number, '電話番号'
    %br/
    = f.text_field :phone_number, placeholder: '例) 09012345678'
  .actions
    = f.submit "Sign up"
= render "devise/shared/links"
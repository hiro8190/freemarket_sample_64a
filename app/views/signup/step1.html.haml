      =image_tag "fmarket_logo_red.svg", size: "185x49", alt: "logo"
    %div.progress-status
      %ul.progress
        %li.is-active
          会員情報
          %div{"data-step" => ""}
        %li
          電話番号認証
          %div{"data-step" => ""}
        %li
          お届け先住所入力
          %div{"data-step" => ""}
        %li
          支払い方法
          %div{"data-step" => ""}

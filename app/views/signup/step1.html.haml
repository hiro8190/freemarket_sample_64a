    %div.uesr-text__flame
      %div.user-text__flame--small
        パスワード    
      %div.user-text__flame--require
        必須
    %input{:name => "password", :placeholder => "6文字以上", :type => "text", :value => "", :class => "user-place"}        
    %div.uesr-text__flame
      %div.user-text__flame--small
        パスワード(確認)    
      %div.user-text__flame--require
        必須
    %form
      %input{:name => "confirm-pass", :placeholder => "6文字以上 ", :type => "text", :value => "", :class => "user-place"}        
      %div.g-recaptcha{"data-callback" => "clearcall", "data-sitekey" => "6Lc7ccYUAAAAAFd6H9n4KZ-HTY5_bwk4TfCyOMWo"}


    %input{:name => "phone-button", :type => "submit", :value => "次へ進む", :class => "user-btn"}

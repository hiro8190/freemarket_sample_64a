= form_for @user, url: step2_signup_index_path, method: :get, html: {class: 'first-main__box'} do |f|
  .field
    = f.label :nickname, 'ニックネーム'
    %br/
    = f.text_field :nickname, placeholder: '例) メルカリ太郎'
  .field
    = f.label :email, 'メールアドレス'
    %br/
    = f.email_field :email, placeholder: 'PC・携帯どちらでも可'
  .field
    = f.label :password, 'パスワード'
    - if @minimum_password_length
      %em
        (#{@minimum_password_length} characters minimum)
    %br/
    = f.password_field :password, autocomplete: "new-password"
  .field
    = f.label :name, 'お名前(全角)'
    %br/
    = f.text_field :last_name, placeholder: '例) 山田'
    = f.text_field :first_name, placeholder: '例) 彩'
  .field
    = f.label :name_kana, 'お名前カナ(全角)'
    %br/
    = f.text_field :last_name_kana, placeholder: '例) ヤマダ'
    = f.text_field :first_name_kana, placeholder: '例) アヤ'
  .field
    = f.label :birth, '生年月日'
    %br/
    = f.text_field :birth_year, placeholder: '--'
    = f.text_field :birth_month, placeholder: '--'
    = f.text_field :birth_day, placeholder: '--'
    %p ロボット認証
    = f.submit 'Continue'
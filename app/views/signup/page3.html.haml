.heading
  .heading__logo
    =image_tag "fmarket_logo_red.svg", size: "185x49", alt: "logo"
  .progress-status
    %ul.progress
      %li.is-complete
        会員情報
        %div{"data-step" => ""}
      %li.is-complete
        電話番号認証
        %div{"data-step" => ""}
      %li.is-active
        お届け先住所入力
        %div{"data-step" => ""}
      %li
        支払い方法
        %div{"data-step" => ""}
      %li.progress__last
        完了
        %div{"data-step" => ""}
  = form_for @address, url: page4_signup_path, method: :get, html: {class: 'form__box'} do |f|
  .field
    = f.label :postcode, '郵便番号'
    %span.form-require
      必須
    %br/
    = f.text_field :postcode, placeholder: '例) 123-4567'
  .field
    = f.label :prefeture, '都道府県'
    %span.form-require
      必須
    %br/
    = f.select :prefeture, JobAdministration.work_locations.keys
  .field
    = f.label :city, '市区町村'
    %span.form-require
      必須
    %br/
    = f.text_field :city, placeholder: '例) 横浜市緑区'
  .field
    = f.label :block, '番地'
    %span.form-require
      必須
    %br/
    = f.text_field :block, placeholder: '例) 青山1-1-1'
  .field
    = f.label :building, '建物名'
    %br/
    = f.text_field :building, placeholder: '柳ビル103'
    = f.submit '次へ進む'
  = render 'layouts/register-footer'